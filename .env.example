# Infrastructure SDK Configuration
# Copy this file to .env and fill in your actual values

# Kubernetes Configuration
INFRA_SDK_KUBERNETES__CONFIG_PATH=/Users/yourusername/.kube/config
INFRA_SDK_KUBERNETES__CONTEXT=your-cluster-context
INFRA_SDK_KUBERNETES__NAMESPACE=default

# AWS Configuration
INFRA_SDK_AWS__REGION=us-west-2
INFRA_SDK_AWS__ACCESS_KEY_ID=your-access-key-here
INFRA_SDK_AWS__SECRET_ACCESS_KEY=your-secret-key-here
INFRA_SDK_AWS__PROFILE=your-aws-profile
INFRA_SDK_AWS__CLUSTER_NAME=your-eks-cluster-name
INFRA_SDK_AWS__SPOT_INSTANCE_PREFERRED=true
INFRA_SDK_AWS__VPC_ID=vpc-1234567890abcdef0

# VM Configuration
INFRA_SDK_VM__DEFAULT_CPU=4
INFRA_SDK_VM__DEFAULT_MEMORY=8Gi
INFRA_SDK_VM__DEFAULT_DISK_SIZE=100Gi
INFRA_SDK_VM__WINDOWS_BASE_IMAGE=registry.k8s.io/sig-windows/windows-server-2022:latest
INFRA_SDK_VM__LINUX_BASE_IMAGE=ubuntu:22.04

# Isolation Configuration
INFRA_SDK_ISOLATION__DEDICATED_NODES=true
INFRA_SDK_ISOLATION__NETWORK_POLICIES_ENABLED=true
INFRA_SDK_ISOLATION__ENCRYPTED_STORAGE=true

# Cost Optimization Configuration
INFRA_SDK_COST__SPOT_INSTANCE_PREFERENCE=0.8
INFRA_SDK_COST__IDLE_TIMEOUT=3600
INFRA_SDK_COST__DAILY_BUDGET_LIMIT=100.0
INFRA_SDK_COST__MONTHLY_BUDGET_LIMIT=2000.0

# Logging Configuration
INFRA_SDK_LOGGING__LEVEL=INFO
INFRA_SDK_LOGGING__FORMAT=json
INFRA_SDK_LOGGING__OUTPUT=console
INFRA_SDK_LOGGING__FILE_PATH=/var/log/infrastructure-sdk/app.log